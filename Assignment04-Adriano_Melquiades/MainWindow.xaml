            <TextBox Name="ResultHeight" TextWrapping="Wrap" Width="120"/>
            <Label Content="Weight" HorizontalAlignment="Center"/>
            <TextBox Name="ResultWeight" TextWrapping="Wrap" Width="120"/>


            

