            <RadioButton GroupName="activityLevel">I am super active(very hard exercise or sports and physical job or 2x training)</RadioButton>


            <StackPanel Margin="0 10 0 0" >
                <TextBox Height="50" SpellCheck.IsEnabled="True" Language="en-Ca" TextWrapping="Wrap">
                    Input notes
