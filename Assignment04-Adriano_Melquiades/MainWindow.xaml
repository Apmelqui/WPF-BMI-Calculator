            </StackPanel>

            <Button Name="BtnCalculate" Content="Calculate BMI" Margin="0 20 0 0"/>







            <Button Name="BtnToTest" Click="BtnToTest_Click">Test Button</Button>
            <Label Name="labelTest">Test</Label>


        </StackPanel>


        <StackPanel Grid.Column="1" Margin="20">

